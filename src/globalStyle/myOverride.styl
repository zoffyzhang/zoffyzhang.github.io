a {
    &[href='#table-of-contents'] {
        display: none;
    }

    &:hover {
        color: #333;
    }

    text-decoration: none;
    color: inherit;
}

li > a {
    color: #2c8898;
}
blockquote {
    font-style: normal;
}

/* phone */
@media (max-width: 768px) {
    body {
        font-size: 1rem;
    }
}
/* tablet */
@media (min-width: 769px) and (max-width: 1023px) {
    body {
        font-size: 1rem;
    }
}
/* desktop */
@media (min-width: 1024px) {
    body {
        font-size: 1rem;
    }
}
