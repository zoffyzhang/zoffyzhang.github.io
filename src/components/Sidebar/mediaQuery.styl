/* phone */
@media screen and (max-width: 768px) {
    .sidebar {
        width: 100%;
        height: 150px;
        font-size: 0.8em;
        padding: 10px 20px 20px;

        &-content {
            position: relative;
            top: 0;
            height: 100%;

            .sidebar-logo {
                width: 140px;
            }

            ul {
                margin: 20px;
                flex-direction: row;

                li {
                    margin: 0 10px;
                    padding: 0;
                }
            }

            .find-me {
                opacity: 1;
                position: relative;
                bottom: 0;
                display: inline-block;

                img {
                    &:hover {
                        box-shadow: none;
                    }
                }
            }
        }

        &:hover {
            .find-me {
                opacity: 1;
                bottom: auto;
            }
            .color-overlay {
                background-color: transparent;
            }
        }
    }
}
