@import '../../globalStyle/variables.styl';

.loading {
    width: 100px;
    height: 100px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    &-msg {
        font-size: 14px;
    }

    &-animator div {
        width: 5px;
        height: 50px;
        background: #4a4a4a;
        opacity: 0.8;
        margin: 0 1px;
        border-radius: 2px;
        display: inline-block;
        animation: loading 0.5s ease-in-out infinite alternate;

        &:nth-child(1) {
            animation-delay: 0s;
        }
        &:nth-child(2) {
            animation-delay: 0.1s;
        }
        &:nth-child(3) {
            animation-delay: 0.2s;
        }
        &:nth-child(4) {
            animation-delay: 0.25s;
        }
        &:nth-child(5) {
            animation-delay: 0.3s;
        }
    }
}

@keyframes loading {
    0% {
        transform: scale(1, 1);
    }
    100% {
        transform: scale(1, 0.3);
    }
}
