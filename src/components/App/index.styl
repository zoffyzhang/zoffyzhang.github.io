.App {
    width: 100%;
    overflow: hidden;

    &-logo {
        animation: App-logo-spin infinite 20s linear;
    }

    &-header {
        background-color: #222;
        padding: 20px;
        color: white;
    }

    &-title {
        font-size: 1.5em;
    }

    &-intro {
        font-size: large;
    }
}

@keyframes App-logo-spin {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
